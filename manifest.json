{
  "manifest_version": 2,
  "name": "H-Header",
  "version": "1.0.0",
  "description": "修改Header的Chrome扩展",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Header 配置",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
